on:
  push:
    branches:
      - main

name: Secret Example

env:
  EMAIL: git@magierdinge.de

jobs:
  ppa:
    name: "Creates signed Readme"
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pages: write
      id-token: write
    steps:
      - uses: actions/checkout@v2
      - run: echo "${{ secrets.PPA_SIGNING_KEY }}" > ppa_signing_key.gpg
      - run: gpg --import ppa_signing_key.gpg
      - run: mkdir -p ./target/gh-pages/ || true
      - run: gpg --default-key "${EMAIL}" --clearsign -o - README.md > ./target/gh-pages/README.md
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v1
        with:
          path: './target/gh-pages/'
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v2